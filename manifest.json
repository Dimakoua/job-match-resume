{
    "manifest_version": 3,
    "name": "AI Resume Optimizer",
    "version": "1.0",
    "description": "Optimize your resume to match job descriptions for ATS.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icons8-cv-48.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "libs/pdf.worker.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
"content_scripts": [
    {
        "matches": [
            "https://www.linkedin.com/jobs/view/*",
            "https://www.indeed.com/viewjob?*",
            "https://www.glassdoor.com/job-listing/*"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
    }
],

    "icons": {
        "16": "icons/icons8-cv-16.png",
        "48": "icons/icons8-cv-48.png",
        "128": "icons/icons8-cv-96.png"
    }
}