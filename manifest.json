{
    "manifest_version": 3,
    "name": "AI Resume Optimizer",
    "version": "1.0",
    "description": "Optimize your resume to match job descriptions for ATS.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icons8-cv-48.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "libs/pdf.worker.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/jobs/view/*",
                "*://*.indeed.com/viewjob*",
                "*://*.indeed.com/company/*/jobs/*",
                "*://*.glassdoor.com/Job/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icons8-cv-16.png",
        "48": "icons/icons8-cv-48.png",
        "128": "icons/icons8-cv-96.png"
    }
}